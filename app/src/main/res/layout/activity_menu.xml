<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameFragments.MenuFragment">


    <Button
        android:id="@+id/otherGameButton"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_below="@id/guessGameButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="Hello World Game"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guessGameButton"
        app:layout_constraintEnd_toEndOf="@+id/guessGameButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guessGameButton" />

    <Button
        android:id="@+id/guessGameButton"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:text="Guessing Game"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>